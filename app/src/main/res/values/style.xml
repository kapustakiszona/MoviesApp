<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DescriptionTextVieStyle">
        <item name="lineHeight">14sp</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TitleTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="lineHeight">14sp</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeTextViewStyle">
        <item name="android:textSize">6.9sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:textColor">#000000</item>
        <item name="lineHeight">8sp</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:progressDrawable">@drawable/rating_progress</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRadius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="TitleDetailsStyle">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#000000</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="DescriptionTextViewDetailsStyle">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">15sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ActorsDetailsTextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ShapeTextViewDetailsStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:textColor">#000000</item>
        <item name="lineHeight">16sp</item>
    </style>

</resources>